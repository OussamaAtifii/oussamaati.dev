---
import BriefCaseIcon from '@icons/BriefCaseIcon.astro';
import { experience } from '@mocks/experience';
import ExperienceItem from './ExperienceItem.astro';
import Section from './Section.astro';
---

<Section title="Experience" id="experience" icon={BriefCaseIcon}>
  <ul
    class="relative ml-2 border-s border-gray-700 space-y-10"
    aria-label="Professional experience timeline"
  >
    {experience.map((item) => <ExperienceItem experience={item} />)}
  </ul>
</Section>
