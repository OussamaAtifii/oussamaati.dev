---
import KeyboardIcon from '@icons/KeyboardIcon.astro';
import { skills } from '@mocks/skills';
import Section from './Section.astro';
---

<Section title="Skills" id="skills" icon={KeyboardIcon}>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      skills.map((skill) => (
        <div class="p-5 border border-gray-700 bg-bunker-950 rounded-lg shadow-lg transition-transform hover:-translate-y-1 hover:shadow-md duration-300 group">
          <h3 class="text-lg font-semibold text-white flex items-center gap-2 mb-4">
            <skill.icon
              class="size-5 text-gray-400 group-hover:rotate-12 group-hover:scale-120 group-hover:text-white transition-all duration-500"
              aria-hidden="true"
            />
            {skill.name}
          </h3>
          <div class="flex flex-wrap gap-2">
            {skill.stack.map((item) => (
              <span class="px-3 py-2 text-sm font-medium text-gray-300 bg-gray-800 rounded-md shadow-md">
                {item}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</Section>
